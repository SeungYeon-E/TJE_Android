<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DeleteActivity"
    android:padding="10dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="3"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="학생 정보 삭제"
        />

    <EditText
        android:id="@+id/delete_code"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:hint="학번(4자리)"
        android:textSize="20dp"
        android:enabled="false"
        />
    <EditText
        android:id="@+id/delete_name"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:hint="이름(10자리)"
        android:textSize="20dp"
        android:enabled="false"
        />
    <EditText
        android:id="@+id/delete_dept"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:hint="전공(12자리)"
        android:textSize="20dp"
        android:enabled="false"
        />
    <EditText
        android:id="@+id/delete_phone"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:hint="전화번호(12자리)"
        android:textSize="20dp"
        android:enabled="false"
        />
    <Button
        android:id="@+id/delete_btn"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:textSize="20dp"
        android:text="삭제"
        android:textStyle="bold"
        />

</LinearLayout>