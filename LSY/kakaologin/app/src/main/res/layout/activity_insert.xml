<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.InsertActivity"
    android:padding="10dp"
    android:background="#4888FF00"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:background="#00000000"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/insert_toolbar"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            />

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/insert_image"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:src="@drawable/user"
        />

    <EditText
        android:id="@+id/insert_name"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:hint="  Name"
        android:textSize="20dp"
        android:gravity="bottom"
        />
    <EditText
        android:id="@+id/insert_phone"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:hint="  Phone"
        android:inputType="number"
        android:textSize="20dp"
        android:gravity="bottom"
        />
    <EditText
        android:id="@+id/insert_address"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:hint="  Address"
        android:textSize="20dp"
        android:gravity="bottom"
        />
    <EditText
        android:id="@+id/insert_email"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:hint="  Email"
        android:textSize="20dp"
        android:gravity="bottom"
        />

    <!--<Button
        android:id="@+id/insert_btn"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.5"
        android:textSize="20dp"
        android:text="입력"
        android:textStyle="bold"
        android:textColor="#676767"
        android:stateListAnimator="@null"
        />-->

</LinearLayout>